<div id="live-view" style="padding: 60px 0;">
    <div class="container" v-if="!cloudSuccess" style="padding-top: 25px;">

        <div class="flex-container filterbar" style="white-space: nowrap;">
            <div class="form-group col-xs-6">
                <input id="searchText " type="text " v-model="search" class="form-control " placeholder="Search " />
            </div>
            <div class="form-group col-xs-6 ">
                <span style="padding-left: 20px; padding-right:5px">Show </span> <select class="pageSizeControl custom-select" v-model="pageSize" style="width: auto;">
                            <option value="5" >5</option>
                            <option value="10">10</option>
                            <option selected value="15">15</option>
                            <option value="10000">All</option>
                        </select> <span style="padding-right:5px">entries</span>
            </div>
            <span style="padding-left: 150px; padding-right:10px"> Time Filter:</span>
            <div class="form-group">
                Start:
                <datepicker v-model="timeFrom" :config="timepickerOptions" style="width: 60%; display: inline-block;"></datepicker>
            </div>
            <div class="form-group">
                End:
                <datepicker v-model="timeTo" :config="timepickerOptions" style="width: 60%; display: inline-block;"></datepicker>
            </div>
            <div class="form-group col-xs-6">
                <button class="btn btn-secondary" @click="clearFilters">Clear Filters</button>
            </div>
        </div>

