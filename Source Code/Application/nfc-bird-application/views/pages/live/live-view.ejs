<div id="live-view">
    <div class="container" v-if="!cloudSuccess">
        <!-- FILTER BAR -->
        <div class="flex-container filterbar" style="white-space: nowrap;">
            <div class="form-group col-xs-6">
                <input id="searchText " type="text " v-model="search" class="form-control " placeholder="Search " />
            </div>
            <div class="form-group col-xs-6 ">
                <span style="padding-left: 20px; padding-right:5px">Show </span> <select class="pageSizeControl custom-select" v-model="pageSize" style="width: auto;">
                            <option value="5" >5</option>
                            <option value="10">10</option>
                            <option selected value="15">15</option>
                            <option value="10000">All</option>
                        </select> <span style="padding-right:5px">entries</span>
            </div>
            <span style="padding-left: 150px; padding-right:10px"> Time Filter:</span>
            <div class="form-group">
                Start:
                <datepicker v-model="timeFrom" :config="timepickerOptions" style="width: 60%; display: inline-block;"></datepicker>
            </div>
            <div class="form-group">
                End:
                <datepicker v-model="timeTo" :config="timepickerOptions" style="width: 60%; display: inline-block;"></datepicker>
            </div>
            <div class="form-group col-xs-6">
                <button class="btn btn-secondary" @click="clearFilters">Clear Filters</button>
            </div>
        </div>
        <!-- MAIN TABLE -->
        <table id="live-visits" border="1" class="table table-bordered table-condensed table-hover">
            <thead role="rowgroup">
                <tr role="row" class="birdheader" style="font-weight: bold; background-color: #83cbd7 !important; color: #001117 !important;">
                    <th role="columnheader">Bird Name</th>
                    <th role="columnheader">Left Ring Colour</th>
                    <th role="columnheader">Right Ring Colour</th>
                    <th role="columnheader">Visit Time</th>
                </tr>
            </thead>

            <tbody role="rowgroup">
                <tr style="cursor:pointer;" class="clickable-row" v-for="visit in visitData" @click="echo(index)">
                    <td class="birdJustifyColumn">{{visit.birdName}}</td>
                    <td>{{visit.leftRingID}}</td>
                    <td>{{visit.rightRingID}}</td>
                    <td>{{visit.createdAt}}</td>
                </tr>
            </tbody>
        </table>

        <!-- FOOTER BAR -->

        <footer id="page-footer" class="navbar navbar-expand-sm navbar-dark bg-dark flex-column flex-md-row justify-content-between position-fixed footernav">
            <paginate :page-count="Math.ceil(visitCount / pageSize)" :click-handler="pageClick" :prev-text="'&nbsp Prev'" :next-text="'Next &nbsp'" :container-class="'pagination'" :page-class="'page-item'" :page-link-class="'page-link'" :prev-class="'ignore page-item'"
                :prev-link-class="'page-link'" :next-class="'ignore page-item'" :next-link-class="'page-link'" :disabled-class="'ignore disabled'">
            </paginate>

            <button class="btn btn-secondary" @click="exportToExcel">Export Test</button>
        </footer>


    </div>
</div>
<%- /* Expose locals as `window.SAILS_LOCALS` :: */ exposeLocalsToBrowser() %>