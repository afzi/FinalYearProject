
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
  
<div id="signup" v-cloak>
  <div class="container" v-if="!cloudSuccess">
    <h1 class="text-center">Register new user</h1>
    <div class="signup-form">
      <hr/>
      <ajax-form action="signup" :syncing.sync="syncing" :cloud-error.sync="cloudError" @submitted="submittedForm()" :handle-parsing="handleParsingForm">
        
          <table width="100%">
              <tbody>
              <tr>
              <td>
                  <div class="form-group">
                      <input class="form-control" id="fullName" type="text"  :class="[formErrors.fullName ? 'is-invalid' : '']" v-model.trim="formData.fullName" placeholder="Full Name" autocomplete="name" focus-first>
                      <div class="invalid-feedback" v-if="formErrors.fullName">Please enter your full name.</div>
                    </div>
              </td>
              <td>&nbsp;</td>
              </tr>

              <tr>
              <td>
                  <div class="form-group">
                      <input class="form-control" id="username" type="text"  :class="[formErrors.username ? 'is-invalid' : '']" v-model.trim="formData.username" placeholder="Username" autocomplete="username">
                      <div class="invalid-feedback" v-if="formErrors.username">Please enter a valid username.</div>
                    </div>
              </td>
              <td>
                <div class="form-group">
                  <a href="#" data-toggle="tooltip" data-placement="right" title="Minimum 6 characters">
                      <img alt="tooltip" height="20px" width="20px" src="/images/tooltip.png"/>
                      </a>
              </div>
              </td>
              </tr>
              
              <tr>
              <td>
                  <div class="form-group">
                      <input class="form-control" id="password" type="password"  :class="[formErrors.password ? 'is-invalid' : '']" v-model.trim="formData.password" placeholder="Password" autocomplete="new-password">
                      <div class="invalid-feedback" v-if="formErrors.password">Please enter a password.</div>
                  </div>
              </td>
              <td>
                  <div class="form-group">
                      <a href="#" data-toggle="tooltip" data-placement="right" title="Minimum 6 characters">
                          <img alt="tooltip" height="20px" width="20px" src="/images/tooltip.png"/>
                          </a>
                  </div>
              </td>
              </tr>
              <tr>
              <td>
                  <div class="form-group">
                      <input class="form-control" id="confirmPassword" type="password"  :class="[formErrors.confirmPassword ? 'is-invalid' : '']" v-model.trim="formData.confirmPassword" placeholder="Confirm Password" autocomplete="new-password">
                      <div class="invalid-feedback" v-if="formErrors.confirmPassword">Your password and confirmation do not match.</div>
                    </div>
              </td>
              <td>&nbsp;</td>
              </tr>
              </tbody>
              </table>

        <div class="form-group">
            <table id="privilege" width="100%">
                <tbody>
                <tr>
                <td colspan="2"><label for="Privileges">Privileges</label><br></td>
                </tr>
                <tr>
                <td><input id="hasRead" type="checkbox"  name="hasRead" value="hasRead" v-model="formData.hasRead"> Read</td>
                <td><a data-toggle="tooltip" data-placement="right" title="Allows user to view bird entries">
                      <img alt="tooltip" height="20px" width="20px" src="/images/tooltip.png"/>
                    </a>
                  </td>
                </tr>
                <tr>
                <td><input id="hasCreateEdit" type="checkbox" name="hasCreateEdit" value="hasCreateEdit" v-model="formData.hasCreateEdit"> Create</td>
                <td><a data-toggle="tooltip" data-placement="right" title="Allows user to make new birds (and nest sites)">
                    <img alt="tooltip" height="20px" width="20px" src="/images/tooltip.png"/>
                    </a>
                  </td>
                </tr>
                <tr>
                <td> <input id="hasEditFull" type="checkbox" name="hasEditFull" value="hasEditFull" v-model="formData.hasEditFull"> Edit</td>
                <td><a data-toggle="tooltip" data-placement="right" title="Allows user to edit information on the system">
                     <img alt="tooltip" height="20px" width="20px" src="/images/tooltip.png"/>
                    </a>
                  </td>
                </tr>
                <tr>
                <td><input id="hasExport" type="checkbox" name="hasExport" value="hasExport" v-model="formData.hasExport"> Export</td>
                <td><a data-toggle="tooltip" data-placement="right" title="Allows user to export a limited set of data using pre-created filters, suitable for upper management">
                    <img alt="tooltip" height="20px" width="20px" src="/images/tooltip.png"/>
                  </a>
                </td>
                </tr>
                <!-- <tr>
                <td><input id="hasExportFull" type="checkbox" name="hasExportFull" value="hasExportFull" v-model="formData.hasExportFull"> Export Full</td>
                <td><a data-toggle="tooltip" data-placement="right" title="Allows user to export all data in the system and gives the option for custom filters, suitable for researchers">
                      <img alt="tooltip" height="20px" width="20px" src="/images/tooltip.png"/>
                    </a>
                  </td>
                </tr> -->
                <tr>
                <td> <input id="hasAdmin" type="checkbox" name="hasAdmin" value="hasAdmin" v-model="formData.hasAdmin"> Admin</td>
                <td><a data-toggle="tooltip" data-placement="right" title="Allows user to do everything above as well as register new users and feeders.">
                       <img alt="tooltip" height="20px" width="20px" src="/images/tooltip.png"/> 
                     </a>
                </td>
                </tr>              
                </tbody>
                </table>
     
        </div>
        
        <br>

        <!-- <div class="form-group form-check">
          <input class="form-check-input" id="terms-agreement" type="checkbox" v-model="formData.agreed">
          <label for="terms-agreement" class="form-check-label" :class="[formErrors.agreed ? 'text-danger' : '']">I have read &amp; agree to the <a target="_blank" href="/terms">terms of service</a>.</label>
        </div> -->

        <p class="text-danger" v-if="cloudError==='emailAlreadyInUse'"><small>It looks like there's already an account with your username. Please select a different one.</small></p>
        
        <p class="text-danger" v-else-if="cloudError"><small>An error occured while processing your request. Please check your information and try again, or <a href="/support">contact support</a> if the error persists.</small></p>
        <div class="form-group">
          <ajax-button type="submit" :syncing="syncing" class="btn-dark btn-lg btn-block">Create account</ajax-button>
        </div>
      </ajax-form>
      <p class="text-center">Have an account? <a href="/login">Sign in</a></p>
    </div>
  </div>
</div>
<script>
  $(document).ready(function(){
    $('[data-toggle="tooltip"]').tooltip();   
  });
  </script>
  
<%- /* Expose locals as `window.SAILS_LOCALS` :: */ exposeLocalsToBrowser() %>
